<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./test/bootstrap.php">
  <php>
    <server name="SYMFONY" value="./" />
  </php>
  <testsuites>
    <testsuite name="Helios Test Suite">
      <directory suffix="Test.php">./test/</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist>
      <directory>./</directory>
      <exclude>
        <directory>./test/</directory>
        <directory>./lib/</directory>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
